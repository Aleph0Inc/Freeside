% return if ($RT::URI::freeside::IntegrationType ne 'Internal');
<select name="<%$Name%>">
% if ($ShowNullOption) {
  <option value="">-</option>
% }
% for my $referral (qsearch('part_referral', {'disabled' => ''})) {
  <option value="<%$referral->refnum%>" <% 
  $referral->refnum == $Default||'' ? 'selected' : ''%>
  ><%$referral->referral%></option>
% }
</select>
<%init></%init>
<%args>
$ShowNullOption => 1
$Name => undef
$Default => 0
</%args>
