    #'' => 'USER_7', #
    #'' => 'USER_8', #
    #'' => 'USER_9', #
    #'' => 'USER_10', #
    #'' => 'INFO_DIGITS', # VARCHAR(3) Info digits from the inbound leg, if applicable
