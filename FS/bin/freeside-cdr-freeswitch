    #'' => 'DISCONNECT_CHARGE', # DECIMAL(15,4) The disconnect charge billed for the call
    #'' => 'BILLING_DELAY', # SMALLINT Billing delay associated with the call
    #'' => 'GRACE_PERIOD', # SMALLINT Grace period associated with the call
